= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .input-field
    = f.label :title
    = f.text_field :title
  .input-field
    = f.cktext_area :content, class: 'ckeditor'
  %br/
  .input-field
    = f.label :section
    %br/
    %br/
    = f.select :section, options_for_select(Article::SECTIONS), { include_blank: true} , { class: "validate" }
  %br/
  .actions
    = button_tag type: "submit", class: "waves-effect waves-light btn" do
      %i.material-icons.right done_all
      Create Article
