!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Ese Walter
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %link{href: 'https://fonts.googleapis.com/icon?family=Material+Icons', rel: 'stylesheet'}
    = csrf_meta_tags
  %body
    %ul#dropdown1.dropdown-content
      %li= link_to 'Edit profile', edit_user_registration_path
      %li.divider
      %li= link_to "Logout", destroy_user_session_path, method: :delete
    .navbar-fixed
      %nav.blue-grey.darken-1
        .nav-wrapper
          = link_to 'Femina Speaks Media', root_path, class: "brand-logo"
          %ul.right.hide-on-med-and-down
            %li= link_to 'Femina Speaks TV', tvs_path
            %li= link_to 'Read', articles_path
            %li= link_to 'Book', books_path
            %li= link_to 'About', about_show_path
            - if user_signed_in?
              %li= link_to current_user.email, '#', class: 'dropdown-button'
              %i.material-icons.right arrow_drop_down
            - else
              %li= link_to "Join", new_user_session_path, class: 'navbar-link'
    .row
      = yield
    .col.s12.footer1.page-footer.center-align
      .container
        .row.pad
          .col.s4
            %li= link_to ('<i class="material-icons left">playlist_add</i> Tickets').html_safe, '#', class: 'waves-effect waves-light blue-grey darken-1 btn-large'
          .col.s4
            %li= link_to ('<i class="material-icons left">assignment</i> Book').html_safe, books_path, class: 'waves-effect waves-light blue-grey darken-1 btn-large'
          .col.s4
            %li= link_to ('<i class="material-icons right">send</i> Donate').html_safe, '#', class: 'waves-effect waves-light blue-grey darken-1 btn-large'
      .footer-copyright
        .container.pad
          = link_to image_tag("facebook.png", size: '100x100'), 'https://www.facebook.com/esefemina'
          = link_to image_tag("google_buzz.png", size: '100x100'), 'https://plus.google.com/+EseWalter/posts'
          = link_to image_tag("twitter.png", size: '100x100'), 'https://twitter.com/kendrickzma'
          .pad
            %h6.white-text Copyright Â© 2015 Femina Speaks Media, All rights reserved.