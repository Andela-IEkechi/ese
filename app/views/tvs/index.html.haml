.container
  %h1 Femina Speaks TV

  %table
    %thead
      %tr
        %th Title
        %th Description
        %th Published
        %th Youtube url
        %th
        %th
        %th

    %tbody
      - @tvs.each do |tv|
        %tr
          %td= tv.title
          %td= tv.description
          %td= tv.published
          %td= tv.youtube_url
          %td= link_to 'Show', tv
          %td= link_to 'Edit', edit_tv_path(tv)
          %td= link_to 'Destroy', tv, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to ('<i class="material-icons">add</i> Add New Video').html_safe, new_tv_path, 'data-tooltip' => 'Add New Video',
  class: 'btn-floating btn-large tooltipped waves-effect waves-light blue-grey darken-1', 'data-delay' => '50', 'data-position' => 'top'
