.back
  .container
    %p#notice= notice

    .row
      %h3.center-align= @tv.title

    .container
      .video-container
        %iframe.survey_segment{src: "//www.youtube.com/embed/#{@tv.youtube_url}", frameborder: "0", width: "853", height: "480"}

    .row
      %blockquote
        %h5= @tv.description
      %span Published :
      = @tv.published
    - if can? :manage, :all
      = link_to ('<i class="material-icons">edit</i> Edit Video').html_safe, edit_tv_path(@tv), 'data-tooltip' => 'Edit Video',
        class: 'btn-floating btn-large tooltipped waves-effect waves-light blue-grey darken-1', 'data-delay' => '50', 'data-position' => 'top'

    = link_to ('<i class="material-icons left">call_received</i> Back').html_safe, tvs_path, class: 'waves-effect waves-light blue-grey darken-1 btn'
