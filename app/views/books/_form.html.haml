= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :release_date
    = f.date_select :release_date
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :cost
    = f.number_field :cost
  .actions
    = f.submit 'Save'
